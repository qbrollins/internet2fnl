@{
    Layout = "_AdmLayout";

}
<div class="row">
    <div class="col-md-8" id="divList">
        <h4>Anketler</h4>

        <table class="table" id="tbSurwaysList">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Adı</th>
                    <th>Durumu</th>
                    <th>Kayıt T.</th>
                    <th>Düzenleme T.</th>
                    <th>İşlemler</th>
                </tr>
            </thead>

            <tbody>
            </tbody>
        </table>

    </div>

    <div class="col-md-4" id="divAddUpdate">
        <h4 id="editHeader">Anket Ekle</h4>

        <div class="b-2">
            <label>Anket Adı</label>
            <input type="text" class="form-control" id="txtName" />
            <input type="hidden" id="txtId" />
        </div>
        <div class="b-2">
            <input type="checkbox" class="form-check-inline" id="cbIsActive" />
            <label>Aktif</label>
        </div>
        <div class="mb-2">
            <button class="btn btn-outline-primary btn-sm" id="btnSave">Kaydet</button>
            <button class="btn btn-outline-primary btn-sm" id="btnEdit">Düzenle</button>
            <button class="btn btn-outline-danger btn-sm" id="btnDelete">Sil</button>
            <button class="btn btn-outline-secondary btn-sm" id="btnCancel">Vazgeç</button>
        </div>

        <div id="result"></div>

    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var ApiBaseUrl = "@ViewBag.ApiBaseUrl";


 //           var token = localStorage.getItem("token");
 //           if (token == "" || token == null) {
 //               location.href = "/Login";
  //              return false;
            }


            SurwaysList();
            $("#btnEdit").hide();
            $("#btnDelete").hide();

            function SurwaysList() {
                $.ajax({
                    url: ApiBaseUrl + "Surways",
                    method: "GET",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    contentType: "application/json",
                    success: function (data) {
                        SurwaysListToTable(data);
                    },
                    error: function (e) {
                        if (e.status == 401) {
                            localStorage.removeItem("token");
                            location.href = "/Login";
                        }
                    }
                });
            }
            function SurwaysListToTable(data) {
                $("#tbSurwaysList tbody").empty();
                var tr = '';
                $.each(data, function (i, item) {
                    var bg = item.isActive ? 'bg-success' : 'bg-danger';

                    tr += '<tr><td>' + item.id + '</td><td>' + item.name + '</td><td><span class="badge ' + bg + '">' + (item.isActive ? 'Aktif' : 'Pasif') + '</span></td><td>' + FormatDate(item.created) + '</td><td>' + FormatDate(item.updated) + '</td><td><a href="/Products/' + item.id + '" class="btn btn-outline-primary btn-sm ">Ürünler</a><button class="btn btn-outline-primary btn-sm ms-2 edit" id=' + item.id + '>Düzenle</td></tr>'
                });

                $("#tbSurwaysList tbody").append(tr);


                if (!userRoles.includes("Admin")) {

                    $("#divAddUpdate").hide();
                    $("#divList").removeClass("col-md-8").addClass("col-md-12");
                    $(".edit").hide();
                }


            }
            function FormatDate(d) {
                var date = new Date(d);
                var day = date.getDate() > 9 ? date.getDate() : '0' + date.getDate();
                var mount = date.getMonth() > 9 ? date.getMonth() : '0' + date.getMonth();
                var year = date.getFullYear();

                var hour = date.getHours() > 9 ? date.getHours() : '0' + date.getHours();
                var minute = date.getMinutes() > 9 ? date.getMinutes() : '0' + date.getMinutes();
                var second = date.getSeconds() > 9 ? date.getSeconds() : '0' + date.getSeconds();

                var fd = day + "." + mount + "." + year + " " + hour + ":" + minute + ":" + second;
                return fd
            }


            $("#btnSave").click(function () {
                var name = $("#txtName").val();
                var isActive = $("#cbIsActive").is(":checked");
                var Surways = new Object();
                Surways.Name = name;
                Surways.IsActive = isActive;

                $.ajax({
                    url: ApiBaseUrl + "Surways",
                    method: "POST",
                    data: JSON.stringify(Surways),
                    contentType: "application/json",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    success: function (data) {
                        $("#result").show();
                        if (data.status) {
                            $("#result").removeClass().addClass("alert alert-success");
                            SurwaysList();
                        }
                        else {
                            $("#result").removeClass().addClass("alert alert-danger");
                        }
                        $("#result").html(data.message);
                        $("#result").fadeOut(3000);
                    },
                    error: function (e) {
                        if (e.status == 401) {
                            localStorage.removeItem("token");
                            location.href = "/Login";
                        }
                    }
                });

            });
            $(document).on("click", ".edit", function () {
                var id = $(this).attr("id");
                $.ajax({
                    url: ApiBaseUrl + "Surways/" + id,
                    method: "GET",
                    contentType: "application/json",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    success: function (data) {
                        $("#txtId").val(data.id);
                        $("#txtName").val(data.name);
                        $("#cbIsActive").prop("checked", data.isActive);

                        $("#btnEdit").show();
                        $("#btnDelete").show();
                        $("#btnSave").hide();

                        $("#editHeader").html("Anket Düzenle - Sil");
                    },
                    error: function (e) {
                        if (e.status == 401) {
                            localStorage.removeItem("token");
                            location.href = "/Login";
                        }
                    }
                });


            });


            $("#btnCancel").click(function () {
                $("#txtId").val("");
                $("#txtName").val("");
                $("#cbIsActive").prop("checked", false);
                $("#btnEdit").hide();
                $("#btnDelete").hide();
                $("#btnSave").show();
                $("#editHeader").html("Anket Ekle");

            });


            $("#btnEdit").click(function () {

                var id = $("#txtId").val();
                var name = $("#txtName").val();
                var isActive = $("#cbIsActive").is(":checked");
                var Surways = new Object();
                Surways.Id = id;
                Surways.Name = name;
                Surways.IsActive = isActive;

                $.ajax({
                    url: ApiBaseUrl + "Surways",
                    method: "PUT",
                    data: JSON.stringify(Surways),
                    contentType: "application/json",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    success: function (data) {
                        $("#result").show();
                        if (data.status) {
                            $("#result").removeClass().addClass("alert alert-success");
                            SurwaysList();
                        }
                        else {
                            $("#result").removeClass().addClass("alert alert-danger");
                        }
                        $("#result").html(data.message);
                        $("#result").fadeOut(3000);
                    },
                    error: function (e) {
                        if (e.status == 401) {
                            localStorage.removeItem("token");
                            location.href = "/Login";
                        }
                    }
                });


            });

            $("#btnDelete").click(function () {
                console.log("sil");
                var id = $("#txtId").val();
                $.ajax({
                    url: ApiBaseUrl + "Surways/" + id,
                    method: "DELETE",
                    contentType: "application/json",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    success: function (data) {
                        $("#result").show();
                        if (data.status) {
                            $("#result").removeClass().addClass("alert alert-success");
                            SurwaysList();
                        }
                        else {
                            $("#result").removeClass().addClass("alert alert-danger");
                        }
                        $("#result").html(data.message);
                        $("#result").fadeOut(3000);
                    },
                    error: function (e) {
                        if (e.status == 401) {
                            localStorage.removeItem("token");
                            location.href = "/Login";
                        }
                    }
                });


            });
        });
    </script>
}